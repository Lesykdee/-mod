{
  "name": "echo-bc-mod-collection",
  "version": "1.0.0",
  "scripts": {
    "type-check": "pnpm -r type-check",
    "build:dev": "pnpm type-check && pnpm build:res && pnpm -r build --configDebug --configBaseURL \"http://localhost:8080/\"",
    "build": "pnpm build:res && pnpm -r build",
    "build:res": "copyfiles -u 1 \"resources/**/*.png\" \"resources/**/*.mp3\" \"resources/**/*.js\" public",
    "release": "pnpm build:res && pnpm -r build",
    "page:readme": "node build_readme.js",
    "page:images": "copyfiles -u 1 \"image/*.png\" public",
    "page:all": "pnpm page:readme && pnpm page:images",
    "serve": "http-server -p 8080 --cors public"
  },
  "author": "Echo",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "fs-extra": "^11.2.0",
    "github-markdown-css": "^5.6.1",
    "http-server": "^14.1.1",
    "marked": "^14.1.2",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@9.7.0"
}
